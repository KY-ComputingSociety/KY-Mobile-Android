<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StudentFragment"
    android:background="#f1f1f1">

        <TextView
            android:id="@+id/home_title_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homepage"
            android:textSize="35sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home_title_home"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/above_lay"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/home_bicycle"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bicycle"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book_bicycles"
                        android:layout_marginTop="80dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/home_peer_tutor"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginStart="20dp"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tutoring"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/peer_tutoring"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/home_dh_menu"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginStart="20dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/menu"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DH Menu"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:id="@+id/second_lay"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/home_student_src"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/books"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/student_resource"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/home_student_feed"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="end"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/feedback"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/home_timetable"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="end"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/timetable"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/timetable"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>